---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Linktree Clone">
  <Header />

  <main>
    <div class="container">
      <h2>Most popular Linkers</h2>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  main {
    flex: 1;
    padding: 1rem 1.5rem;
  }

  @media (min-width: 640px) {
    main {
      padding: 1rem 2.5rem;
    }
  }
</style>
