---
import { Image } from 'astro:assets';
import type { User } from '../types/User'

interface Props {
  userData: User;
}

const { userData } = Astro.props;
---

<article>
  <picture>
    <Image alt="" class="profile-pic" src={`/Images/${userData.username}.webp`} height={180} width={220} />
  </picture>

  <div class="info-container">
    <h3>@{userData.username}</h3>
    <p>{userData.description}</p>
  </div>
</article>

<style>
  article {
    height: 100%;
    max-width: 220px;
    border: 1px solid #e4e4e4;
    border-radius: 6px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  picture {
    width: 100%;
    overflow: hidden;
  }
  .profile-pic {
    width: 100%;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    object-fit: cover;
    object-position: center 20%;
  }

  .info-container {
    padding: 4px 12px 8px;
  }
  h3 {
    text-align: center;
    font-size: 1rem;
    margin-bottom: 8px;
  }
  p {
    font-size: 12px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
</style>
