---
import { Image } from "astro:assets";
import type { User } from "../types/User";

interface Props {
  userData: User;
}

const { userData } = Astro.props;
---

<article>
  <picture>
    <Image
      alt=""
      class="profile-pic"
      loading="eager"
      src={`/Images/${userData.username}.webp`}
      height={320}
      width={320}
    />
  </picture>

  <div class="mask"></div>

  <div class="info-container">
    <h3>@{userData.username}</h3>
    <p>{userData.description}</p>
  </div>
</article>

<style>
  article {
    position: relative;
    height: 100%;
    width: 320px;
    height: 320px;
    max-width: 320px;
    border: 1px solid #e4e4e4;
    border-radius: 6px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  picture {
    position: absolute;
    inset: 0;
    width: 100%;
    overflow: hidden;
  }
  .profile-pic {
    width: 100%;
    height: 100%;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    object-fit: cover;
  }

  .mask {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.05),
      rgba(0, 0, 0, 0),
      rgba(0, 0, 0, 0.05)
    );
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }
  article:hover .mask {
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0.4),
      rgba(0, 0, 0, 0.5)
    );
  }

  .info-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    position: relative;
    padding: 12px;
  }
  h3 {
    color: #fff;
    text-align: left;
    font-size: 1.5rem;
    font-weight: 400;
    opacity: 0;
    transform: translateY(-2rem);
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }
  article:hover h3 {
    opacity: 1;
    transform: translateY(0);
  }

  p {
    color: #fff;
    margin-top: auto;
    font-size: 1rem;
    opacity: 0;
    transform: translateY(2rem);
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }
  article:hover p {
    opacity: 1;
    transform: translateY(0);
  }
</style>
