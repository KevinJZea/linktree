---
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Linktree clone by Kevin J. Zea." />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content="{Astro.generator}" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="app">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }
  html {
    font-family: Arial, Helvetica, sans-serif;
    scroll-behavior: smooth;
  }
  body,
  blockquote,
  dl,
  dd,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  hr,
  figure,
  p,
  pre {
    margin: 0;
  }
  ol,
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .app {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  a:hover {
    text-decoration: underline;
  }

  .container {
    margin: 0 auto;
    max-width: 1280px;
  }
</style>
