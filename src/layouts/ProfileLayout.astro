---
import type { User } from "../types/User";

interface Props {
  userData: User;
}

const { userData } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={userData.description ?? ""} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content="{Astro.generator}" />
    <title>{userData.name} | Linktree Clone</title>
  </head>
  <body>
    <div class="app">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }
  html {
    font-family: Arial, Helvetica, sans-serif;
    scroll-behavior: smooth;
  }
  body,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    margin: 0;
  }
  ol,
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .app {
    background-color: #fafafa;
    padding: 32px 20px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
</style>
